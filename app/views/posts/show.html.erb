<%= image_tag @post.image.url(:small) %>
<h1><%= @post.title %></h1>
<p><%= @post.user.name %></p>
<p><%= @post.link %></p>
<p><%= @post.description %></p>

<%= link_to "Home", root_path  %>
<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Destory", post_path(@post), method: :delete, data: { confirm: "Are u sure?"} %>
